      <tr><th>Order ID</th><th>Order Items</th><th>Total</th></tr>
      <?php
         $db_host   = '192.168.2.12';
         $db_name   = 'fvision';
         $db_user   = 'webuser';
         $db_passwd = 'insecure_db_pw';


         $connect = new mysqli($db_host, $db_user, $db_passwd, $db_name);
         $qrry = "SELECT * FROM orders";
         $q = $connect->query($qrry);
         while($row = $q->fetch()) {
         echo "<tr><td>".$row["orderID"]."</td><td>".$row["orderItems"]."</td><td>".$row["total"]."</td></tr>\n";
         }
      ?>
      
      
    </table>
